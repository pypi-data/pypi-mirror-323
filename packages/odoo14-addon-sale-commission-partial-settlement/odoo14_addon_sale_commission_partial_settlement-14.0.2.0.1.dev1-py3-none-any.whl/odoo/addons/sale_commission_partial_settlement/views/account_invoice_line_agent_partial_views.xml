<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="invoice_line_agent_partial_tree_embedded" model="ir.ui.view">
        <field name="name">invoice.line.agent.partial.tree.embedded</field>
        <field name="model">account.invoice.line.agent.partial</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <tree>
                <field name="agent_id" />
                <field name="date_maturity" />
                <field name="amount" />
                <field name="currency_id" invisible="1" />
                <field name="settled_amount" />
                <field name="is_settled" />
            </tree>
        </field>
    </record>
        <record id="invoice_line_agent_partial_tree" model="ir.ui.view">
        <field name="name">invoice.line.agent.partial.tree</field>
        <field name="model">account.invoice.line.agent.partial</field>
        <field name="inherit_id" ref="invoice_line_agent_partial_tree_embedded" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">0</attribute>
            </tree>
            <field name="agent_id" position="after">
                <field name="move_id" />
                <field name="invoice_line_id" />
            </field>
        </field>
    </record>
    <record id="invoice_line_agent_partial_search" model="ir.ui.view">
        <field name="name">invoice.line.agent.partial.search</field>
        <field name="model">account.invoice.line.agent.partial</field>
        <field name="arch" type="xml">
            <search>
                <field name="agent_id" />
                <field name="move_id" />
                <field name="invoice_line_id" />
            </search>
        </field>
    </record>
    <record id="action_invoice_line_agent_partial" model="ir.actions.act_window">
        <field name="name">Partial Commission Forecast</field>
        <field name="res_model">account.invoice.line.agent.partial</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem
        name="Partial Commission Forecast"
        id="menu_partial_commission_forecast"
        parent="sale_commission.menu_sale_commissions_management"
        action="action_invoice_line_agent_partial"
        sequence="20"
    />
</odoo>
